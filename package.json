{
  "name": "seed",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@material-ui/core": "^3.0.0",
    "@material-ui/icons": "^3.0.0",
    "classnames": "^2.2.6",
    "enzyme": "^3.4.4",
    "enzyme-adapter-react-16": "^1.2.0",
    "eslint-plugin-react-app": "^3.0.0",
    "history": "^4.7.2",
    "jest-enzyme": "^6.0.3",
    "lodash.debounce": "^4.0.8",
    "lodash.get": "^4.4.2",
    "moment": "^2.22.2",
    "node-sass-chokidar": "^1.3.3",
    "npm-run-all": "^4.1.3",
    "prop-types": "^15.6.2",
    "react": "^16.4.2",
    "react-dom": "^16.4.2",
    "react-intl": "^2.4.0",
    "react-redux": "^5.0.7",
    "react-router-dom": "^4.3.1",
    "react-router-redux": "^5.0.0-alpha.9",
    "react-tether": "^1.0.1",
    "react-toastify": "^4.2.0",
    "redux": "^4.0.0",
    "redux-thunk": "^2.3.0",
    "svg.js": "git+https://github.com/svgdotjs/svg.js.git"
  },
  "devDependencies": {
    "babel-eslint": "^8.2.6",
    "chromedriver": "^2.41.0",
    "dom-serializer": "^0.1.0",
    "eslint": "^5.4.0",
    "eslint-config-prettier": "^3.0.1",
    "eslint-config-react-app": "^2.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-react": "^7.11.1",
    "fetch-mock": "^6.5.2",
    "husky": "^0.14.3",
    "jest": "21.2.1",
    "jest-cli": "21.2.1",
    "jest-dom": "^1.12.0",
    "jest-junit": "^5.1.0",
    "lint-staged": "^7.2.2",
    "nightwatch": "^1.0.9",
    "prettier": "^1.14.2",
    "react-app-rewired": "^1.5.2",
    "react-axe": "^3.0.1",
    "react-scripts": "^1.1.5",
    "react-test-renderer": "^16.4.2",
    "react-testing-library": "^5.0.0",
    "redux-logger": "^3.0.6",
    "redux-mock-store": "^1.5.3",
    "selenium-server": "^3.14.0",
    "stylelint": "^9.5.0",
    "stylelint-config-standard": "^18.2.0"
  },
  "lint-staged": {
    "src/**/*.{js,jsx}": [
      "prettier --write",
      "eslint",
      "git add"
    ],
    "src/**/*.scss": [
      "prettier --write",
      "stylelint --syntax scss",
      "git add"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!<rootDir>/node_modules/",
      "!<rootDir>/path/to/dir/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    },
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "cobertura"
    ]
  },
  "jest-junit": {
    "suiteName": "jest tests",
    "output": "./coverage/junit.xml",
    "classNameTemplate": "{classname}-{title}",
    "titleTemplate": "{classname}-{title}",
    "ancestorSeparator": " â€º ",
    "usePathForSuiteName": "true"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "eslintConfig": {
    "extends": "eslint:recommended"
  },
  "stylelint": {
    "extends": "stylelint-config-standard"
  },
  "scripts": {
    "precommit": "lint-staged",
    "build-css": "node-sass-chokidar --include-path ./src --include-path ./node_modules src/ -o src/",
    "watch-css": "npm run build-css && node-sass-chokidar --include-path ./src --include-path ./node_modules src/ -o src/ --watch --recursive",
    "start-js": "react-scripts start",
    "start": "npm-run-all -p watch-css start-js",
    "build-js": "react-scripts build",
    "build": "npm-run-all build-css build-js",
    "test": "react-scripts test --env=jsdom",
    "test:debug": "react-scripts --inspect-brk test --runInBand --env=jsdom",
    "eject": "react-scripts eject",
    "format-scripts": "prettier --write 'src/**/*.{js,jsx,json}'",
    "format-styles": "prettier --write 'src/**/*.scss'",
    "format": "npm run format-scripts && npm run format-styles",
    "lint-scripts": "eslint 'src/**/*.{js,jsx}'",
    "lint-styles": "stylelint 'src/**/*.scss'",
    "lint": "npm run lint-scripts && npm run lint-styles"
  }
}
